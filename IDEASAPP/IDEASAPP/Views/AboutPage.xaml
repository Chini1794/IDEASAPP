                                <Image Source="../i_ropa.png" />
                                <Label  Style="{StaticResource TextoFiltros}" Text="Vestuario"></Label>
                            </StackLayout>
                        </Frame>
                        <Frame Style="{StaticResource FrameFiltro}" Padding = "5" IsClippedToBounds="true"    >
                            <StackLayout Orientation="Vertical">
                                <Image Source="../i_compras.png" />
                                <Label Style="{StaticResource TextoFiltros}" Text="Compras"></Label>
                            </StackLayout>
                        </Frame>
                        <Frame Style="{StaticResource FrameFiltro}" Padding = "5" IsClippedToBounds="true"    >
                            <StackLayout Orientation="Vertical">
                                <Image Source="../i_gym.png" />
                                <Label Style="{StaticResource TextoFiltros}" Text="Gimnasios"></Label>
                            </StackLayout>
                        </Frame>
                    </StackLayout>

                </StackLayout>
            </Frame>


            <StackLayout Margin="15">
                <Label FontSize="16" Style="{StaticResource TituloAbout}" Text="Búsquedas Recientes" FontAttributes="Bold"  VerticalOptions="Start" />
            
            <ScrollView>
                <CollectionView x:Name="RecientesListView"
                ItemsSource="{Binding NegociosRecientes}"
                SelectionMode="None" HeightRequest="100">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                        <StackLayout Padding="5" x:DataType="model:NegocioMiembro" Orientation="Horizontal">
                                    <Frame CornerRadius="10"
                               HasShadow="True" IsClippedToBounds="true" Padding = "5"  WidthRequest="140" HeightRequest="120">
                                    <StackLayout Orientation="Vertical">
                                        <Label Text="{Binding DNombreComercial}" 
                            LineBreakMode="NoWrap" 

                            FontAttributes="Bold"   
                            FontSize="16" 
                              />
                                        <Label Text="{Binding DDescripcion}" 
                            LineBreakMode="TailTruncation"
                            FontSize="13" 
                               />
                                            </StackLayout>
         
                                    </Frame>
                                    <!--<StackLayout.GestureRecognizers>

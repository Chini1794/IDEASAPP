<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDEASAPP.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">

      
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Text}" FontSize="Large" />
                    <Label Text="Calificación: 4.5/5" FontSize="Medium" HorizontalOptions="EndAndExpand" TextColor="Orange"/>
                </StackLayout>
      
                <Label Text="Categoría:    Servicio" FontSize="Medium"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Emotion:      " FontSize="Medium"/>
                    <Image Source="icon_like.png" VerticalOptions="StartAndExpand" WidthRequest="40" HeightRequest="40"/>
                </StackLayout>
        <Label Text="Comentario:" FontSize="Medium" />
        <Frame CornerRadius="25" HasShadow="True">
                    <StackLayout>
    
        <Label Text="{Binding Description}" FontSize="16"/>
                    </StackLayout>
                </Frame>
       
    </StackLayout>
    
</ContentPage>